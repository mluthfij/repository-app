<li class="list-group-item list-group-item-action" id="<%= dom_id folder %>">
  <div class="row">
    <div class="col text-start">
        <i class="bi bi-folder-fill"></i>
        <%= link_to folder.name, folder, class:"text-decoration-custom" %>
    </div>
    <div class="col text-end">
      <%= time_ago_in_words(folder.created_at) %> ago
    </div>
  </div>
</li>
