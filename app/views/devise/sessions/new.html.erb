<div class="card center-card <%= cookies[:moon] ? "bg-dark" : "bg-light" %>">
  <div class="card-body text-center">
    <h2 class="my-3">Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating mb-3 text-dark">
        <%= f.text_field :login, autofocus: true, autocomplete: "login", class:"form-control", placeholder:"login here..." %>
        <%= f.label :login, "Username/email/phone", for:"floatingInput" %>
      </div>

      <div class="form-floating mb-3 text-dark">
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"password" %>
        <%= f.label :password, for:"floatingInput" %>
      </div>

      <div class="check mb-3">
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me, class:"form-check-label", for:"flexCheckDefault" %>
        <% end %>
      </div>

      <div class="actions mb-3">
        <%= f.submit "Sign in", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
